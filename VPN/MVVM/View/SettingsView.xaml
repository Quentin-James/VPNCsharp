<!-- xml -->
<UserControl x:Class="VPN.MVVM.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VPN.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500"
             Background="#252525">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Formulaire d'ajout -->
        <Border Grid.Column="0" Padding="12" CornerRadius="6" Background="#2E2E2E">
            <StackPanel>
                <TextBlock Text="Add server" Foreground="LightGray" FontSize="16" Margin="0,0,0,8"/>

                <!-- Server input avec placeholder visuel -->
                <Grid Margin="0,6">
                    <TextBox x:Name="ServerTextBox" Text="{Binding ServerAddress, UpdateSourceTrigger=PropertyChanged}" Height="30" Background="#3A3A3A" Foreground="White" BorderBrush="#444" />
                    <TextBlock Text="Server address  (ex: vpn.example.com)"
                               Foreground="#9A9A9A" Margin="8,0,0,0" VerticalAlignment="Center"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Text, ElementName=ServerTextBox}" Value=""/>
                                            <Condition Binding="{Binding IsFocused, ElementName=ServerTextBox}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Username input -->
                <Grid Margin="0,6">
                    <TextBox x:Name="UsernameTextBox" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Height="30" Background="#3A3A3A" Foreground="White" BorderBrush="#444" />
                    <TextBlock Text="Username" Foreground="#9A9A9A" Margin="8,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Text, ElementName=UsernameTextBox}" Value=""/>
                                            <Condition Binding="{Binding IsFocused, ElementName=UsernameTextBox}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Country/Flag selection -->
                <Grid Margin="0,6">
                    <ComboBox x:Name="CountryComboBox" 
                              ItemsSource="{Binding AvailableCountries}"
                              SelectedItem="{Binding SelectedCountry}"
                              Height="30" 
                              Background="#3A3A3A" 
                              Foreground="White" 
                              BorderBrush="#444">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding FlagPath}" Width="24" Height="16" Margin="0,0,8,0" />
                                    <TextBlock Text="{Binding Name}" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <!-- Password input (placeholder caché sur focus) -->
                <Grid Margin="0,6">
                    <PasswordBox x:Name="PasswordBox" Height="30" Background="#3A3A3A" Foreground="White" BorderBrush="#444" />
                    <TextBlock Text="Password" Foreground="#9A9A9A" Margin="8,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsFocused, ElementName=PasswordBox}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Boutons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button x:Name="AddServerButton" Content="Add" Width="90" Height="30" Margin="0,0,8,0" Background="#4A90E2" Foreground="White" />
                    <Button x:Name="ClearFormButton" Content="Delete" Width="90" Height="30" Background="#666" Foreground="White" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Liste des serveurs -->
        <Border Grid.Column="1" Padding="12" CornerRadius="6" Background="#2E2E2E" Margin="12,0,0,0">
            <StackPanel>
                <TextBlock Text="Server" Foreground="LightGray" FontSize="16" Margin="0,0,0,8"/>
                <ListBox x:Name="ServersListBox" Background="#2E2E2E" Foreground="White" BorderBrush="#444">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding Address}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Username}" Foreground="#BFBFBF" FontSize="12"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="Supprimer" Width="80" Height="26" Margin="8,0,0,0" Background="#A94442" Foreground="White"
                                        Command="{Binding DataContext.RemoveServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
