<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:extensions="clr-namespace:VPN.Core">
    <Style TargetType="{x:Type RadioButton}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Margin" Value="4,0,4,0" />
        <Setter Property="Height" Value="38" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            x:Name="border">
                        <StackPanel Orientation="Horizontal">
                            <!-- Utilise une police emoji/symbol pour afficher correctement les icÃ´nes (bouclier, emoji, etc.) -->
                            <TextBlock Margin="{TemplateBinding Padding}"
                                       Text="{Binding Path=(extensions:Extensions.Icon), RelativeSource={RelativeSource TemplatedParent}}"
                                       Foreground="LightGray"
                                       FontFamily="Segoe UI Emoji"
                                       FontSize="14"
                                       VerticalAlignment="Center" />
                            <ContentPresenter VerticalAlignment="Center" Margin="0,0,0,2" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#202020"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="#202020"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>